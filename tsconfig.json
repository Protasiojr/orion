{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJs",
        "lib": ["ESNext","DOM"],
        //saida do compilador "TypeScript"
        "outDir": "./dist/js",
        //pasta principal do programa
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true
    },
    "include": ["./src/**/*"]
    
}